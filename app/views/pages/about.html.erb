<div class="app-card-container">
  <div class="card">
    <h1>About Me</h1>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "placeholder.jpg", width: 300, alt: "placeholder image", class: 'profile-img' %>
      </div>
      <div class="col-md-8">
        <p>I am a junior rails developer looking for his first rails job.</p>

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
            Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Jobs
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card card-block">
              Education
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>


